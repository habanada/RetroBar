<UserControl x:Class="RetroBar.Controls.JapaneseIme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:RetroBar.Converters"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    <Button Click="JapaneseIme_OnClick"
            IsEnabled="{Binding Path=JapaneseImeEnabled, Mode=OneWay}"
            ToolTip="{Binding Path=JapaneseImeTip, Mode=OneWay}"
            Style="{DynamicResource ToolbarButton}">
        <TextBlock Text="{Binding Path=JapaneseImeStatus, Mode=OneWay}"
                   Style="{DynamicResource JapaneseIme}" />
        <Button.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="JapaneseIme_full_shape_hiragana"
                      Click="JapaneseIme_full_shape_hiragana_OnClick"
                      Header="{DynamicResource ime_input_full_shape_hiragana}" />
                <MenuItem x:Name="JapaneseIme_full_shape_katakana"
                      Click="JapaneseIme_full_shape_katakana_OnClick"
                      Header="{DynamicResource ime_input_full_shape_katakana}" />
                <MenuItem x:Name="JapaneseIme_full_shape_alphanumeric"
                      Click="JapaneseIme_full_shape_alphanumeric_OnClick"
                      Header="{DynamicResource ime_input_full_shape_alphanumeric}" />
                <MenuItem x:Name="JapaneseIme_kana"
                      Click="JapaneseIme_kana_OnClick"
                      Header="{DynamicResource ime_input_katakana}" />
                <MenuItem x:Name="JapaneseIme_alphanumeric"
                      Click="JapaneseIme_alphanumeric_OnClick"
                      Header="{DynamicResource ime_input_alphanumeric}" />
                <MenuItem x:Name="JapaneseIme_direct"
                      Click="JapaneseIme_direct_OnClick"
                      Header="{DynamicResource ime_input_direct}" />
                <Separator />
                <MenuItem x:Name="JapaneseIme_open_imepad"
                      Click="JapaneseIme_open_imepad_OnClick"
                      Header="{DynamicResource ime_open_pad}" />
                <MenuItem x:Name="JapaneseIme_open_add_word_dictionary"
                      Click="JapaneseIme_open_add_word_dictionary_OnClick"
                      Header="{DynamicResource ime_open_add_word_dictionary}" />
                <MenuItem x:Name="JapaneseIme_open_dictionary_tool"
                      Click="JapaneseIme_open_dictionary_tool_OnClick"
                      Header="{DynamicResource ime_open_dictionary_tool}" />
                <MenuItem x:Name="JapaneseIme_open_properties"
                      Click="JapaneseIme_open_properties_OnClick"
                      Header="{DynamicResource ime_open_properties}" />
                <Separator />
                <MenuItem x:Name="JapaneseIme_input_key"
                      Header="{DynamicResource ime_input_key}">
                    <MenuItem x:Name="JapaneseIme_input_key_roma"
                          Click="JapaneseIme_input_key_roma_OnClick"
                          Header="{DynamicResource ime_input_key_roma}" />
                    <MenuItem x:Name="JapaneseIme_input_key_kana"
                          Click="JapaneseIme_input_key_kana_OnClick"
                          Header="{DynamicResource ime_input_key_kana}" />
                </MenuItem>
                <MenuItem x:Name="JapaneseIme_conversion"
                      Header="{DynamicResource ime_conversion}">
                    <MenuItem x:Name="JapaneseIme_conversion_general"
                          Click="JapaneseIme_conversion_general_OnClick"
                          Header="{DynamicResource ime_conversion_general}" />
                    <MenuItem x:Name="JapaneseIme_conversion_none"
                          Click="JapaneseIme_conversion_none_OnClick"
                          Header="{DynamicResource ime_conversion_none}" />
                </MenuItem>
            </ContextMenu>
        </Button.ContextMenu>
    </Button>
</UserControl>
